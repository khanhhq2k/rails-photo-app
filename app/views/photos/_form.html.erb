<%= form_for @photo, html: { multipart: true } do |f| %>

  <div class="field">
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </div>
  
  <div class="field">
    <%= f.label :description %><br>
    <%= f.text_area :description %>
  </div>
  
  <div class="field">
    <%= f.label :image %><br>
    <%= f.file_field :image %>
  </div>
  
  <div class="field">
    <%= f.radio_button :public, 'true', checked: true %> 
    <%= f.label :public, 'Public', value: 'true' %>
    <%= f.radio_button :public, 'false' %>
    <%= f.label :public, 'Private', value: 'false' %>
  </div>
  
  <div class="actions">
    <%= f.submit %>
  </div>
  

<% end %>
