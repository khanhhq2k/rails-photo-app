<p>
  <strong>Title:</strong>
  <%= @photo.title %>
</p>

<p>
  <strong>Description:</strong>
  <%= @photo.description %>
</p>

<p>
  <%= image_tag @photo.image.url(:medium) %>
</p>

<%= link_to 'Edit', edit_photo_path(@photo), class:"btn btn-xs btn-primary" %>
<%= link_to "Delete", photo_path(@photo), method: :delete, data: {confirm: "Are you sure to remove this photo?"}, class:"btn btn-xs btn-danger" %>
<%= link_to 'Back', photos_path, class:"btn btn-xs btn-success" %>